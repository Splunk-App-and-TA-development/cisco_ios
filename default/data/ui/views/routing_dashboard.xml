<?xml version='1.0' encoding='utf-8'?>
<form>
  <label>Dashboard</label>
  <fieldset autoRun="true">
    <input type="time">
      <default>Last 60 minutes</default>
    </input>
  </fieldset>
  <row>
    <table>
      <searchString>sourcetype=cisco:ios facility=DUAL mnemonic=NBRCHANGE | table _time,host,protocol,process_id,as_number,neighbor,src_int,state_to,reason | sort -_time</searchString>
      <title>EIGRP neighbor changes</title>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </table>
  </row>
  <row>
    <table>
      <searchString>sourcetype=cisco:ios facility=OSPF mnemonic=ADJCHG | table _time,host,process_id,neighbor,src_int,state_from,state_to,reason | sort -_time</searchString>
      <title>OSPF adjacency changes</title>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </table>
  </row>
  <row>
    <table>
      <searchString>sourcetype=cisco:ios facility=BGP mnemonic=ADJCHANGE | table _time,host,neighbor,vrf,state_to,reason | sort -_time</searchString>
      <title>BGP adjacency changes</title>
    </table>
  </row>
  <row>
    <table>
      <searchString>sourcetype=cisco:ios facility=LDP mnemonic=NBRCHG | table _time,host,protocol,neighbor,unknown_id,state_to,reason | sort -_time</searchString>
      <title>MPLS LDP neighbor changes</title>
    </table>
  </row>
</form>
