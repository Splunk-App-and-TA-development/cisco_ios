<form>
  <label>Event Analysis</label>
  <description>Event Analysis</description>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="field1" searchWhenChanged="true">
      <label/>
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="multiselect" token="severity_id_selection" searchWhenChanged="true">
      <label>Severity</label>
      <populatingSearch fieldForLabel="severity_name" fieldForValue="severity_id">| inputlookup cisco_ios_severity</populatingSearch>
      <delimiter> OR </delimiter>
      <default>0,1,2,3,4,5,6,7</default>
      <valuePrefix>severity_id=</valuePrefix>
    </input>
  </fieldset>
  <row>
    <html>
      <section>
      <h3>This event analysis is based on the following fields in the Cisco IOS events</h3>
      <ul>
        <li>Facility (<q>facility</q>)</li>
        <li>Severity (<q>severity_id</q>)</li>
        <li>Mnemonic (<q>mnemonic</q>)</li>
      </ul>
      <p>A lookup is performed based on the aforementioned fields.</p>
      </section>
    </html>
    <html>
      <section>
        <h3>Devices supported in the lookup file</h3>
      <ul>
        <li>Nexus 7000, MDS 9000</li>
        <li>Catalyst 2960, 3750 etc</li>
        <li>Catalyst 4500</li>
        <li>Catalyst 6500</li>
        <li>Cisco WLAN Controller</li>
      </ul>
      </section>
      </html>
  </row>
  <row>
    <panel>
      <table>
        <title>Message breakdown</title>
        <searchString>| pivot Cisco_IOS_Event Cisco_IOS_Event count(Cisco_IOS_Event) AS "Events" dc(host) AS "Unique devices" SPLITROW vendor_message_text AS "Message text" SPLITROW vendor_explanation AS Explanation SPLITROW vendor_recommended_action AS "Recommended action" SPLITROW severity_id AS severity_id TOP 500 count(Cisco_IOS_Event) ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1 | search $severity_id_selection$</searchString>
        <earliestTime>$field1.earliest$</earliestTime>
        <latestTime>$field1.latest$</latestTime>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.drilldown">cell</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.0001</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
        <option name="drilldown">row</option>
	<drilldown>
          <link field="Message text">
            <![CDATA[
                        /app/cisco_networks/search?q=search vendor_message_text="$row.Message text$"&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="Explanation">
            <![CDATA[
                        /app/cisco_networks/search?q=search vendor_explanation="$row.Explanation$"&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="Recommended action">
            <![CDATA[
                        /app/cisco_networks/search?q=search vendor_recommended_action="$row.Recommended action$"&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
	</drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Hosts by severity</title>
        <searchString>| pivot Cisco_IOS_Event Cisco_IOS_Event count(Cisco_IOS_Event) AS "Count of Cisco IOS Event" SPLITROW host AS host SPLITCOL severity_name SORT 500 host ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 100 SHOWOTHER 1 | sort -emergency, -alert, -critical, -error, -warning, -notification, -informational, -debugging | table host, emergency, alert, critical, error, warning, notification, informational, debugging</searchString>
        <earliestTime>$field1.earliest$</earliestTime>
        <latestTime>$field1.latest$</latestTime>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">heatmap</option>
        <option name="drilldown">row</option>
        <option name="count">10</option>
        <drilldown>
          <link field="host">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="emergency">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=emergency&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="alert">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=alert&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="critical">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=critical&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="error">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=error&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="warning">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=warning&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="notification">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=notification&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="informational">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=informational&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
          <link field="debugging">
            <![CDATA[
                        /app/cisco_networks/search?q=search host=$row.host$ severity_name=debugging&earliest=$earliest$&latest=$latest$
                ]]>
          </link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>
